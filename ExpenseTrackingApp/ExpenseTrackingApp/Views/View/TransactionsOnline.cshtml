@model ExpenseTrackingApp.Models.TransactionOnline

@{
	ViewBag.Title = "TransactionsOnline";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<ExpenseTrackingApp.Models.TransactionOnline> transactions = ViewData["TransList"] as List<ExpenseTrackingApp.Models.TransactionOnline>;
	List<string> categs = ViewData["categories"] as List<string>;
	int categoryCounter = 0;
}

<h2>TransactionsOnline</h2>

<hr class="newstyle" />
	<p>Here you will find all your bank transactions that are not connected to the bank accounts.</p>
		<table class="table">
			<thead>
				<tr>
					<th>Amount</th>
					<th>Description</th>
					<th>Category</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var transaction in transactions)
				{
					<tr>
						<td>@transaction.Amount </td>
						<td>@transaction.TransactionDescription</td>
						<td>@categs.ElementAt(categoryCounter) </td>
						<td>@transaction.DateAdded.ToShortDateString()</td>
						<td>
							<a href="/Edit/TransactionOnline/@transaction.ID"> edit </a>
							<a href="/Delete/TransactionOnline/@transaction.ID" onclick="return confirm('Are you sure you want to delete this transaction?');"> delete </a>
							@*<a href="/AddTransaction/StarredOnline/@transaction.ID">
								<img src="~/Content/Images/repeat_glyph.png" alt="Repeat Button" width="25" height="25" />
							</a>*@
						</td>
					</tr>
					categoryCounter++;
				}
			</tbody>
		</table>
	</div>
</div>