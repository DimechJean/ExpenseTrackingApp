@model ExpenseTrackingApp.Models.TransactionCategory

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int CatID = ViewBag.param_id;
    string Name = ViewBag.param_name;
}

<h2>EDIT Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TransactionCategory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID, CatID)

        <div class="form-group">
            @Html.LabelFor(model => model.NameCat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCat, new { htmlAttributes = new { @class = "form-control", @Value = Name } })
                @Html.ValidationMessageFor(model => model.NameCat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
