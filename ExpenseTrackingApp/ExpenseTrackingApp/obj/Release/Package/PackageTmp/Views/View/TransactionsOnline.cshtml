@model ExpenseTrackingApp.Models.TransactionOnline

@{
	ViewBag.Title = "Bank Transactions";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<ExpenseTrackingApp.Models.TransactionOnline> transactions = ViewData["TransList"] as List<ExpenseTrackingApp.Models.TransactionOnline>;
	List<string> categs = ViewData["categories"] as List<string>;
	int categoryCounter = 0;
}

<script src="~/Scripts/jquery.dataTables.min.js"></script>

<h2>Bank Transactions</h2>

<hr class="newstyle" />
	<p>Here you will find all your bank transactions that are not connected to the bank accounts.</p>
		<table id ="transactionTable" class="table" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Amount</th>
					<th>Description</th>
					<th>Category</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var transaction in transactions)
				{
					<tr>
						<td>€ @transaction.Amount </td>
						<td>@transaction.TransactionDescription</td>
						<td>@categs.ElementAt(categoryCounter) </td>
						<td>@transaction.DateAdded.ToShortDateString()</td>
					</tr>
					categoryCounter++;
				}
			</tbody>
		</table>
	</div>
</div>

<script>
	$(document).ready(function () {
		$('#transactionTable').DataTable();
	});
</script>